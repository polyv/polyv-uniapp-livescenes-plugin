<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B202D"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/plvls_login_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="云课堂-手机开播"
        android:textColor="#F0F1F5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/plvls_login_input_channel_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/plvls_login_input_et_bg_selector"
        android:gravity="left|center"
        android:hint="请输入频道号"
        android:paddingLeft="20dp"
        android:paddingRight="48dp"
        android:singleLine="true"
        android:textColor="#F0F1F5"
        android:textColorHint="#99F0F1F5"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_title_tv"
        app:layout_constraintVertical_bias="0.12" />

    <ImageView
        android:id="@+id/plvls_login_input_channel_delete_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:src="@drawable/plvls_login_input_delete"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/plvls_login_input_channel_et"
        app:layout_constraintTop_toTopOf="@+id/plvls_login_input_channel_et"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/plvls_login_input_nick_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/plvls_login_input_et_bg_selector"
        android:gravity="left|center"
        android:hint="请输入昵称"
        android:paddingLeft="20dp"
        android:paddingRight="48dp"
        android:singleLine="true"
        android:textColor="#F0F1F5"
        android:textColorHint="#99F0F1F5"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_input_channel_et" />

    <ImageView
        android:id="@+id/plvls_login_input_nick_delete_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:src="@drawable/plvls_login_input_delete"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/plvls_login_input_nick_et"
        app:layout_constraintTop_toTopOf="@+id/plvls_login_input_nick_et"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/plvls_login_input_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/plvls_login_input_et_bg_selector"
        android:gravity="left|center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="48dp"
        android:singleLine="true"
        android:textColor="#F0F1F5"
        android:textColorHint="#99F0F1F5"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_input_nick_et" />

    <ImageView
        android:id="@+id/plvls_login_input_pwd_delete_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:src="@drawable/plvls_login_input_delete"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/plvls_login_input_pwd_et"
        app:layout_constraintTop_toTopOf="@+id/plvls_login_input_pwd_et"
        tools:visibility="visible" />

    <Button
        android:id="@+id/plvls_login_enter_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/plvls_login_enter_bt_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:text="登录"
        android:textColor="#F0F1F5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_input_pwd_et"
        app:layout_constraintVertical_bias="0.2" />

    <LinearLayout
        android:id="@+id/plvls_login_read_protocol_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_enter_btn">

        <CheckBox
            android:id="@+id/plvls_login_agree_contract_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/plvls_checkbox_selector"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意"
            android:textColor="#99F0F1F5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plvls_login_private_policy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="#F0F1F5"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="#99F0F1F5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plvls_login_usage_contract_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《使用协议》"
            android:textColor="#F0F1F5"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/plvls_login_mic_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/plvls_login_mic_iv_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/plvls_login_split_view"
        app:layout_constraintEnd_toStartOf="@+id/plvls_login_camera_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/plvls_login_camera_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/plvls_login_camera_iv_selector"
        app:layout_constraintEnd_toStartOf="@+id/plvls_login_front_camera_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plvls_login_mic_iv"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_read_protocol_ly"
        app:layout_constraintTop_toTopOf="@id/plvls_login_mic_iv" />

    <ImageView
        android:id="@+id/plvls_login_front_camera_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/plvls_login_front_iv_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plvls_login_camera_iv"
        app:layout_constraintTop_toBottomOf="@+id/plvls_login_read_protocol_ly"
        app:layout_constraintTop_toTopOf="@id/plvls_login_mic_iv" />

    <View
        android:id="@+id/plvls_login_split_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#19F0F1F5"
        app:layout_constraintBottom_toTopOf="@+id/plvls_login_live_status_tv"
        app:layout_constraintLeft_toLeftOf="@+id/plvls_login_mic_iv"
        app:layout_constraintRight_toRightOf="@+id/plvls_login_front_camera_iv" />

    <TextView
        android:id="@+id/plvls_login_live_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播状态"
        android:textColor="#99F0F1F5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ProgressBar
        android:id="@+id/plvls_login_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <android.support.constraint.Group
        android:id="@+id/plvls_login_bottom_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="plvls_login_front_camera_iv,plvls_login_mic_iv,plvls_login_split_view,plvls_login_camera_iv,plvls_login_live_status_tv" />
</android.support.constraint.ConstraintLayout>